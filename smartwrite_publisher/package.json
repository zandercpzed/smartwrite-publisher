{
  "name": "smartwrite-publisher",
  "version": "1.0.0",
  "author": "Zander Catta Preta",
  "description": "Professional publishing automation for Substack directly from Obsidian. Features batch publishing, parallel processing, and enhanced UX.",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "start": "bash ./scripts/daemon.sh",
    "release": "bash ./scripts/release.sh",
    "release:auto": "bash ./scripts/auto-release.sh",
    "release:watch": "bash ./scripts/dev-watch.sh",
    "release:dry": "bash ./scripts/release.sh --dry-run",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "lint": "eslint ."
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "esbuild": "0.25.5",
    "eslint-plugin-obsidianmd": "0.1.9",
    "globals": "14.0.0",
    "tslib": "2.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.35.1",
    "@eslint/js": "9.30.1",
    "jiti": "2.6.1"
  },
  "dependencies": {
    "obsidian": "latest"
  }
}
